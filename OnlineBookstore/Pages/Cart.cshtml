@page
@model OnlineBookstore.Pages.CartModel
@{
}
<h2>Your Cart</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody class="table-dark">
        @foreach (var i in Model.basket.Items)
        {
<tr>
    <td>@i.Book.Title</td>
    <td>@i.Quantity</td>
    <td>$@i.Book.Price</td>
    <td>$@(i.Quantity * i.Book.Price) </td>

    <td class="text-center">
        <form method="post" asp-page-handler="Remove">
            <input type="hidden" name="bookId" value="@i.Book.BookId" />
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
        </form>
    </td>
</tr>            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>


</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Back to Booklist</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Checkout">Checkout</a>
</div>
